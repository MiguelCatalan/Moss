<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.miguelcatalan.android.views.custom_views.ObservableScrollView
        android:id="@+id/activity_detail_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/activity_detail_image"
                android:layout_width="match_parent"
                android:layout_height="480dp"
                android:scaleType="centerCrop"
                android:tint="#AA000000"
                tools:layout_height="10dp" />

            <ImageView
                android:id="@+id/item_book_cover"
                android:layout_width="@dimen/item_book_width"
                android:layout_height="@dimen/item_book_height"
                android:layout_above="@id/activity_detail_title"
                android:layout_marginBottom="@dimen/activity_vertical_margin_half"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:elevation="4dp"
                tools:layout_height="10dp" />

            <TextView
                android:id="@+id/activity_detail_title"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_below="@id/activity_detail_image"
                android:background="@color/theme_primary"
                android:elevation="4dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:paddingLeft="48dp"
                android:paddingRight="48dp"
                android:textColor="#FFF"
                android:textSize="28sp"
                tools:text="An awesome title" />

            <ImageButton
                android:id="@+id/activity_detail_fab"
                android:layout_width="@dimen/fab_size"
                android:layout_height="@dimen/fab_size"
                android:layout_alignParentRight="true"
                android:layout_below="@id/activity_detail_image"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="-27dp"
                android:background="@drawable/fab"
                android:elevation="4dp"
                android:scaleX="0"
                android:scaleY="0"
                android:src="@drawable/ic_download" />

            <ProgressBar
                android:id="@+id/activity_detail_progress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_below="@id/activity_detail_title"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/activity_detail_book_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_detail_title"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin_double"
                android:paddingLeft="@dimen/activity_vertical_margin_double"
                android:paddingRight="@dimen/activity_horizontal_margin_double"
                android:paddingTop="@dimen/activity_horizontal_margin_half">

                <TextView
                    android:id="@+id/activity_detail_header_author"
                    style="@style/HeaderTextView"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin_half"
                    android:text="@string/detail_header_author" />

                <TextView
                    android:id="@+id/activity_detail_author"
                    style="@style/DetailField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="@string/lorem_ipsum_short" />

                <TextView
                    android:id="@+id/activity_detail_header_description"
                    style="@style/HeaderTextView"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin_half"
                    android:text="@string/detail_header_description"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/activity_detail_description"
                    style="@style/DetailField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:text="@string/lorem_ipsum" />
            </LinearLayout>
        </RelativeLayout>
    </com.miguelcatalan.android.views.custom_views.ObservableScrollView>

</FrameLayout>