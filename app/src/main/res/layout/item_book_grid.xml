<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ariv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"

    android:id="@+id/item_book_container"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.miguelcatalan.android.views.custom_views.AutoResizeImageView
            android:id="@+id/item_book_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ariv:ratio="1.5"
            ariv:resize="by_width"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignBottom="@+id/item_book_cover"
            android:background="@drawable/gradient_background"
            android:padding="@dimen/activity_horizontal_margin_half">

            <TextView
                android:id="@+id/item_book_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/item_book_release"
                android:layout_alignParentTop="true"
                android:gravity="bottom"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/body_text_1_inverse"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/item_book_release"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="top"
                android:textColor="@color/body_text_2_inverse"
                android:textSize="@dimen/text_size_xsmall" />


        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>